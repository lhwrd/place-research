# ============================================================================
# REQUIRED - Authentication
# ============================================================================
# JWT Secret Key - REQUIRED for authentication to work
# Generate with: openssl rand -hex 32
JWT_SECRET_KEY=your-secret-key-here-generate-with-openssl-rand-hex-32

# ============================================================================
# Database Configuration
# ============================================================================
# SQLite (default - good for development)
DATABASE_URL=sqlite:///./place_research.db

# PostgreSQL (recommended for production)
# DATABASE_URL=postgresql://user:password@localhost:5432/place_research

# ============================================================================
# JWT Token Settings (Optional - defaults shown)
# ============================================================================
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================================================
# Authentication Settings (Optional)
# ============================================================================
REQUIRE_AUTHENTICATION=false  # Set to true in production
ALLOW_API_KEY_CREATION=true

# ============================================================================
# External API Keys
# ============================================================================
GOOGLE_MAPS_MAP_ID=
GOOGLE_MAPS_API_KEY=
NATIONAL_FLOOD_DATA_API_KEY=
NATIONAL_FLOOD_DATA_CLIENT_ID=
WALKSCORE_API_KEY=
AIRNOW_API_KEY=
FBI_API_KEY=

# ============================================================================
# File Paths for Data Sources
# ============================================================================
RAILLINES_PATH=
ANNUAL_CLIMATE_PATH=
DISTANCE_CONFIG_PATH=

# ============================================================================
# NocoDB Configuration (Optional)
# ============================================================================
NOCODB_BASE_URL=
NOCODB_API_KEY=
NOCODB_TABLE_ID=

# ============================================================================
# Application Settings
# ============================================================================
LOG_LEVEL=INFO
API_HOST=0.0.0.0
API_PORT=8000

# ============================================================================
# Logging & Observability
# ============================================================================
LOG_FORMAT=json  # json, text, or color
LOG_REQUESTS=true
LOG_RESPONSES=true
LOG_PROVIDER_METRICS=true
LOG_CACHE_OPERATIONS=false

# ============================================================================
# Cache Settings
# ============================================================================
CACHE_ENABLED=true
CACHE_BACKEND=memory  # memory or redis
CACHE_DEFAULT_TTL=3600

# Redis (if using redis cache backend)
# REDIS_URL=redis://localhost:6379/0

# Per-provider cache TTLs (in seconds)
CACHE_TTL_AIR_QUALITY=1800
CACHE_TTL_CLIMATE=86400
CACHE_TTL_FLOOD=86400
CACHE_TTL_INFRASTRUCTURE=86400
CACHE_TTL_WALKABILITY=7200
