# ============================================================================
# Docker Compose Environment Variables
# ============================================================================

# ----------------------------------------------------------------------------
# Database Configuration
# ----------------------------------------------------------------------------
POSTGRES_USER=place_research
POSTGRES_PASSWORD=changeme_in_production
POSTGRES_DB=place_research
POSTGRES_PORT=5432

# ----------------------------------------------------------------------------
# Application Ports
# ----------------------------------------------------------------------------
BACKEND_PORT=8000
FRONTEND_PORT=3000

# ----------------------------------------------------------------------------
# JWT Authentication (REQUIRED)
# ----------------------------------------------------------------------------
# Generate with: openssl rand -hex 32
JWT_SECRET_KEY=your-secret-key-here-generate-with-openssl-rand-hex-32
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ----------------------------------------------------------------------------
# Authentication Settings
# ----------------------------------------------------------------------------
REQUIRE_AUTHENTICATION=false
ALLOW_API_KEY_CREATION=true

# ----------------------------------------------------------------------------
# External API Keys
# ----------------------------------------------------------------------------
GOOGLE_MAPS_API_KEY=
GOOGLE_MAPS_MAP_ID=
NATIONAL_FLOOD_DATA_API_KEY=
NATIONAL_FLOOD_DATA_CLIENT_ID=
WALKSCORE_API_KEY=
AIRNOW_API_KEY=
FBI_API_KEY=

# ----------------------------------------------------------------------------
# Application Settings
# ----------------------------------------------------------------------------
LOG_LEVEL=INFO
LOG_FORMAT=json
APP_NAME=Property Research API

# ----------------------------------------------------------------------------
# Frontend Environment Variables
# ----------------------------------------------------------------------------
VITE_API_BASE_URL=http://localhost:8000/api/v1
VITE_APP_NAME=Property Research

# ----------------------------------------------------------------------------
# File Paths for Data Sources
# ----------------------------------------------------------------------------
RAILLINES_PATH=
ANNUAL_CLIMATE_PATH=
DISTANCE_CONFIG_PATH=
